{
  "name": "react-app-kit",
  "version": "0.0.1",
  "description": "ground zero for your next react app",
  "main": "index.html",
  "scripts": {
    "start": "node --use_strict server.js",
    "stop": "bash bin/kill.sh",
    "sync": "browser-sync start --no-notify -p 'localhost:3000' -f 'index.html' 'dist/css/main.css' 'dist/js/index.js' 'dist/img/**/*'",
    "uglify": "uglifyjs dist/js/index.js -c warnings=false,dead_code=true -o dist/js/index.js",
    "build:img": "ncp src/img dist/img",
    "build-prod:js": "browserify src/js/index.js -o dist/js/index.js -g [envify --NODE_ENV 'production'] -t babelify && npm run uglify",
    "build:js": "browserify src/js/index.js -d -o dist/js/index.js -t babelify",
    "build:css": "node-sass --output-style compressed src/css/main.sass | postcss -u autoprefixer -o dist/css/main.css",
    "build": "npm run build:css && npm run build:img && if test \"$NODE_ENV\" = \"production\"; then npm run build-prod:js; else npm run build:js; fi",
    "watch:img": "onchange 'src/img/**/*' -- npm run build:img",
    "watch:js": "onchange 'src/js/**/*.js' -- npm run build:js",
    "watch:css": "onchange 'src/css/**/*.{sass,scss}' -- npm run build:css",
    "watch": "run-p watch:*",
    "dev": "npm run stop && run-p start sync watch",
    "prod": "npm run clean && npm run build --production",
    "clean": "rimraf dist/{css,img,js}/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BuckyMaler/react-app-kit"
  },
  "keywords": [
    "build",
    "react",
    "sass",
    "node",
    "babel"
  ],
  "author": {
    "name": "Bucky Maler",
    "url": "buckymaler.com",
    "mail": "maler.bucky@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^6.5.1",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.17.5",
    "browserify": "^13.1.1",
    "envify": "^4.0.0",
    "ncp": "^2.0.0",
    "node-sass": "^3.10.1",
    "npm-run-all": "^3.1.1",
    "onchange": "^3.0.2",
    "postcss-cli": "^2.6.0",
    "rimraf": "^2.5.4",
    "uglify-js": "^2.7.4"
  },
  "dependencies": {
    "backbone": "^1.3.3",
    "body-parser": "^1.15.2",
    "ejs": "^2.4.2",
    "express": "^4.14.0",
    "jquery": "^3.0.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0"
  }
}
